# Server
PORT=3000

# MongoDB connection string
# For local development, you can use: mongodb://127.0.0.1:27017/uber
DB_CONNECT=mongodb+srv://<username>:<password>@cluster0.xxxxxx.mongodb.net/uber?retryWrites=true&w=majority

# JWT secret for signing tokens
JWT_SECRET=change_this_secret_in_production

# Google Maps API key for server-side requests (Geocoding, Distance Matrix, Places Autocomplete)
GOOGLE_MAPS_API=<your_google_maps_api_key>
